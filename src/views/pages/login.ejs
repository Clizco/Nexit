<div class="col-md-5">
    <div class="card">
        <div class="card-body">
            <form action="/login" method="post">
              <br>
              <input
                type="text"
                name="user_email"
                placeholder="Email"
                class="form-control mb-2"
                
              />
              <br>
              <input 
                type="password"
                name="user_password"
                placeholder="Password"
                class="form-control mb-2"
              />
              <br>
              <br>
                <button type="submit" class="btn btn-primary">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>

