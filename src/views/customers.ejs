<%- include('partials/_header') %> 


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-borderes table-hover">
                <thead>
                    <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) {%>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].first_name%></td>
                                <td><%= data[i].last_name%></td>
                                <td><%= data[i].gender%></td>
                                <td><%= data[i].user_email%></td>
                                <td>
                                <a href="/delete/<%= data[i].user_id%>" class="btn btn-danger">Delete</a>
                                <a href="/update/<%= data[i].user_id%>" class="btn btn-info">Update</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <input
                        type="text"
                        name="first_name"
                        placeholder="Name"
                        class="form-control mb-2"
                        autofocus
                      />
                      <input
                        type="text"
                        name="last_name"
                        placeholder="Lastname"
                        class="form-control mb-2"
                      />
                      <input
                        type="text"
                        name="gender"
                        placeholder="Gender"
                        class="form-control mb-2"
                      />
                      <input
                        type="text"
                        name="user_email"
                        placeholder="Email"
                        class="form-control mb-2"
                      />
                        <button type="submit" class="btn btn-primary">
                            Save Customer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %> 