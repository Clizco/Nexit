<%- include('partials/_header') %> 


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-borderes table-hover">
                <thead>
                    <tr>
                    <th>Created</th>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Birthdate</th>
                    <th>Phone</th>
                    <th>Updated</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody> 
                    <% if (customers) { %>
                        <% for (var i = 0; i < customers.length; i++) {%>
                            <tr>
                                <td><%= customers[i].created_at%></td>
                                <td><%= (i + 1) %></td>
                                <td><%= customers[i].first_name%></td>
                                <td><%= customers[i].last_name%></td>
                                <td><%= customers[i].user_email%></td>
                                <td><%= customers[i].user_password%></td>
                                <td><%= customers[i].birth_date%></td>
                                <td><%= customers[i].user_phone%></td>
                                <td><%= customers[i].updated_at%></td>
                                <td>
                                <a href="/delete/<%= customers[i].id%>" class="btn btn-danger">Delete</a>
                                <a href="/update/<%= customers[i].id%>" class="btn btn-info">Update</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/_footer') %> 